@using MVC_ProductStockManagement.Models.Entity
@model List<Customer>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@*ActionResult Name - Controller - While Running*@ 
@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
            {
                <p>
                    <b> Customer Name to search for: </b>  @Html.TextBox("p")
                    <input type="submit" value="Search" />   
                </p>
            }


<table class="table table-bordered">
    <tr>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Customer Last Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Alert</th>
    </tr>

    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th>
                    @customer.CustomerId
                </th>
                <td>
                    @customer.CustomerName
                </td>
                <td>
                    @customer.CustomerLastName
                </td>
                <td><a href="/Customer/DeleteCustomer/@customer.CustomerId" class="btn btn-danger"> Delete </a></td>
                <td><a href="/Customer/GetCustomer/@customer.CustomerId" class="btn btn-success"> Update </a></td>
                <td>@Html.ActionLink("Delete With Alert", "DeleteCustomer", new {id =  customer.CustomerId }, new { @class = "btn btn-warning", onclick = "return confirm('Are u sure about deleting process !!!')" })</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Customer/NewCustomer/" class="btn btn-primary"> Add New Customer </a>

