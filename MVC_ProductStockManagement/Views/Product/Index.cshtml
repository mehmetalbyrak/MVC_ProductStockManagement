@using MVC_ProductStockManagement.Models.Entity
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Brand</th>
            <th>Product Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>
                    @product.ProductId
                </th>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.ProductBrand
                </td>
                <td>
                    @product.Category.CategoryName
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    @product.Stock
                </td>
                <td><a href="/Product/DeleteProduct/@product.ProductId" class="btn btn-danger"> Delete </a></td>
                <td><a href="/Product/GetProduct/@product.ProductId" class="btn btn-success"> Update </a></td>
            </tr>
        }
    </tbody>

</table>

<a href="/Product/NewProduct/" class="btn btn-primary"> Add New Product </a>






