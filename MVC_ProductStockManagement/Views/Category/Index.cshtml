@using MVC_ProductStockManagement.Models.Entity
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class = "table table-bordered">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    <tbody>
        @foreach(var category in Model)
            {
                <tr>
                    <th>
                        @category.CategoryId
                    </th>
                    <td>
                        @category.CategoryName
                    </td>
                    <td><a href= "/Category/Delete/@category.CategoryId" class="btn btn-danger"> Delete </a></td>
                    <td><a href= "/Category/Update/@category.CategoryId" class="btn btn-success"> Update </a></td>
                </tr>
            }
    </tbody>
</table>

<a href= "/Category/NewCategory/" class = "btn btn-primary"> Add New Category </a>

