@using MVC_ProductStockManagement.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th>
                    @category.CategoryId
                </th>
                <td>
                    @category.CategoryName
                </td>
                <td><a href="/Category/DeleteCategory/@category.CategoryId" class="btn btn-danger"> Delete </a></td>
                <td><a href="/Category/GetCategory/@category.CategoryId" class="btn btn-success">Get Category</a></td>

            </tr>
        }
    </tbody>
</table>


@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Category/NewCategory/" class="btn btn-primary"> Add New Category </a>


